---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Bagde.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import BehanceIcon from "../components/icons/Behance.astro";
import EmailIcon from "../components/icons/Email.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import CodeIcon from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import TechStack from "../components/TechStack.astro";
---

<Layout title="nestor rivas portfolio - Web and Frontend Developer.">
  <main class="px-4" >
    <SectionContainer class="py-38 pb-24">
      <h1 class="text-5xl text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10 ">
        hey, I'm nestor
        <div class="flex justify-center items-center">
          <a 
            href="https://www.linkedin.com/in/nestor-rivas-5a6163196/"
            target="_blank"
            rel="noopener"
            class="flex justify-center item-center"
          >
            <Badge>Available for hire</Badge>
          </a>
        </div>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>
          <!-- Over 4 years of experience.  -->
        </span>
        Freelance web and frontend developer,
        <span class="text-sky-800 opacity-80">from San Miguel, El Salvador.</span>
        <span class="text-sky-950 opacity-75">
          I specialice in UI design, responsive web design and visual development.
        </span>
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill  href="https://www.linkedin.com/in/nestor-rivas-5a6163196/">
          <LinkedInIcon class="size-4 md:size-6"/>
            LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/rotsenk" >
          <GitHubIcon class="size-4 md:size-6"/>
            GitHub
        </SocialPill>
        <SocialPill href="https://www.behance.net/stanleyrivas" >
          <BehanceIcon class="size-4 md:size-6"/>
            Behance
        </SocialPill>
        <SocialPill href="mailto:stanley.95@hotmail.com" >
          <EmailIcon class="size-4 md:size-6"/>
            stanley.95@hotmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <!-- Tech Stack -->
    <SectionContainer id="techStack" >
      <h2 class="text-3xl font-semibold mb-4 flex gap-x-2 items-center">
        Tech Stack
      </h2>
      <TechStack/>
    </SectionContainer>

    <!-- Experience -->
    <SectionContainer id="about" >
      <h2 class="text-3xl font-semibold mb-4 flex gap-x-2 items-center">
        <Briefcase class="size-8" /> 
        Work Experience
      </h2>
      <Experience />
    </SectionContainer>

    <!-- Projects -->
    <SectionContainer id="projects" >
      <h2 class="text-3xl font-semibold mb-4 flex gap-x-2 items-center">
        <CodeIcon class="size-8" /> 
        Projects
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
